{
  "manifest_version": 2,

  "name": "Read In Bed",
  "description": "Read In Bed",
  "version": "0.1",

  "permissions": [
    //"storage"
  ],
  
  "icons": {
    "16": "icon16.png",
    "48": "icon48.png",
    "128": "icon128.png"
  },

  "background":{
    "scripts":["background.js"]
  },

  "options_page": "options.html",
  "content_scripts": [{
    "matches": ["*://*/*"], // Matches http://*/*, https://*/*
    "js": ["jquery-1.9.1.min.js", "inject_rotate.js"]
  }],

  "browser_action": {
    "default_icon": "icon48.png" //,
    // "default_popup": "popup.html"
  }
}